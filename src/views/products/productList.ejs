<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>BerteDeco</title>
    <!-- Bootstrap CSS and CSS Style-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles_product_list.css" />
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> -->
    <!-- Bootstrap icons Fontawesome icons-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/img/icon.jpg" />
</head>
<body>
    <!-- Header and Navbar-->
    <%- include('../partials/header') %>

    <!-- Order items div -->
    <div class="order-div container-fluid px-md-5">
        <div class="main-header row justify-content-between">
            <div class="col-md-12 order-md-last">
                <div class="main-header row">
                    <div class="col-md-6 d-md-flex left-message">
                        <h5>Todos los Productos</h5>
                    </div>
                    <div class="col-md-6 d-flex justify-content-end mb-md-0 mb-3 order-section">
                        <div class="order-message">
                            <p>Ordenar por</p>
                        </div>
                        <div class="form-group">
                            <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                                <option selected >Más Vendidos</option>
                                <option >Mejor Valorados</option>
                                <option >Precio Menor a Mayor</option>
                                <option >Precio Mayor a Menor</option>
                                <option >Recientes</option>
                                <option >Alfabeticamente</option>        
                            </select>                              
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% for (let p of productos) { %>
                <div class="col mb-5">
                    <div class="card h-100">
                        <% if (typeof p.discount === 'number') { %>
                        <!-- Sale badge-->
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        <% } %>
                        <!-- Product image-->
                        <a class="link-image" href="/products/detail/<%=p.id %>"><img class="card-img-top" src="/img/productos/<%=p.image[0] %>" alt="<%=productos[i].name %>"/></a>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <a href="/products/detail/<%=p.id %>"><h5 class="fw-bolder"><%=p.name %></h5></a>
                                <% if (typeof p.discount === 'number') { %>
                                <!-- Product price and Discount-->
                                <span class="text-muted text-decoration-line-through">$<%=p.price %></span>
                                $<%=p.discount %><br>
                                <div class="label-line">6 cuotas sin interés de <strong>$<%=Math.round(p.discount / 6) %></strong></div>
                                <% } else { %>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="fa fa-star"></div>
                                    <div class="fa fa-star"></div>
                                    <div class="fa fa-star"></div>
                                    <div class="fa fa-star"></div>
                                    <div class="fa fa-star-half"></div>
                                </div> 
                                <!-- Product price-->
                                $<%=p.price %><br>
                                <div class="label-line">6 cuotas sin interés de <strong>$<%=Math.round(p.price / 6) %></strong></div>
                                <% } %>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/cart/resume">Agregar al carro</a></div>
                        </div>
                    </div>
                </div>
                <% } %> 
            </div>
        </div>
    </section>

    <!-- Footer-->
    <%- include('../partials/footer') %>

</body>
</html>
